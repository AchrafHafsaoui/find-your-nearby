<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#0D1117"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top app bar (title + settings) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#0D1117"
        app:title="Fyn â€” Find Your Nearby"
        app:titleTextColor="#FFFFFF"
        app:menu="@menu/menu_scanner" />

    <!-- Hairline divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1C242D" />

    <!-- Screen content -->
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Status card (no new drawables needed) -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtAdvertising"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advertising: ON"
                    android:textStyle="bold"
                    android:textColor="#BBDFFF" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="0dp" />

                <ProgressBar
                    android:id="@+id/progress"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:indeterminateTint="#7EE787"
                    android:visibility="gone" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtScanState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scanning: OFF"
                    android:textStyle="bold"
                    android:textColor="#FFC9A9" />
            </LinearLayout>

        <!-- Controls -->
        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartScan"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="START SCAN"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:backgroundTint="#7C4DFF"
                app:cornerRadius="12dp" />

            <Space
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStopScan"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:enabled="false"
                android:text="STOP SCAN"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:backgroundTint="#E53935"
                app:cornerRadius="12dp" />
        </LinearLayout>

        <!-- Empty state -->
        <LinearLayout
            android:id="@+id/emptyContainer"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/empty"
                android:text="No nearby people yet.\nTap START SCAN."
                android:textAlignment="center"
                android:textColor="#8B949E"
                android:paddingTop="12dp"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Results -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="8dp" />
    </LinearLayout>
</LinearLayout>
